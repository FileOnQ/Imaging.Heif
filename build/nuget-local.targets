<?xml version="1.0" encoding="utf-8" ?>
<Project ToolsVersion="15.0">

	<Target Name="ClearPackageCache" BeforeTargets="DispatchToInnerBuilds" Condition="'$(Configuration)' == Debug">
		<Exec Command="rmdir /s /q %UserProfile%\.nuget\packages\FileOnQ.Imaging.Heif\0.0.0-local.1" />
		<Exec Command="dotnet restore" WorkingDirectory="$(ProjectDir)" />
	</Target>

	<Target Name="CreatePackage" AfterTargets="ClearPackageCache" Condition="'$(Configuration)' == Debug">
		<Exec Command="dotnet pack -o ../../ /p:Version=0.0.0-local.1 /p:PackageVersion=0.0.0-local.1" WorkingDirectory="$(ProjectDir)../../src/FileOnQ.Imaging.Heif" />
	</Target>

</Project>